#!/bin/sh

start() {
    if command -v pcscd >/dev/null 2>&1; then
        pcscd
        echo "pcscd started"
    else
        echo "pcscd not installed; skipping"
    fi
}

stop() {
    killall pcscd >/dev/null 2>&1 || true
}

restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|reload}"
        exit 1
        ;;
esac

exit 0
