config BR2_PACKAGE_OPENCV_MOBILE
	bool "opencv-mobile"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_USE_WCHAR
	help
	  Minimal build of OpenCV library for mobile and embedded platforms.
	  
	  opencv-mobile provides core computer vision functionality with
	  minimal size and dependencies. Perfect for embedded systems.
	  
	  This package is optimized for LuckFox Pico (uclibc) and includes
	  essential modules: core, imgproc, features2d, photo, and video.
	  
	  https://github.com/nihui/opencv-mobile

if BR2_PACKAGE_OPENCV_MOBILE

config BR2_PACKAGE_OPENCV_MOBILE_PYTHON
	bool "Python bindings"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON_NUMPY
	help
	  Build Python 3 bindings for opencv-mobile (cv2 module).
	  
	  This enables using OpenCV from Python for image processing
	  and camera operations.
	  
	  Note: Adds approximately 1-2 MB to the final image.

endif

comment "opencv-mobile needs a toolchain w/ C++, threads, wchar"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS || !BR2_USE_WCHAR
